@model TheSaucisseFactory.Commerce


@{
    ViewBag.Title = "Commerce - Edition";
}

<h2>Commerce - Edition</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
	$(function() {
		$(".datepicker").datepicker();
	});
</script>

@Html.Partial("_Error")

@using (Html.BeginRouteForm("TheSaucisseFactory.Commerce", new {controller = "Commerce", action = "Edit"},
		FormMethod.Post, new { autocomplete = "off" })) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Commerce</legend>

		@Html.HiddenFor(model => model.EntityKey)
		<table width="100%" class="fields">
		<tr>		  
		  	<td>Id</td><td>			            
			            	@Html.DisplayFor(model => model.Id, "UniqueIdentifier")
		  </td>
		  
		</tr>
		<tr>		  
		  	<td>Nom</td><td>			             
			             	@Html.EditorFor(model => model.Nom, "Text")			             
			             	@Html.ValidationMessageFor(model => model.Nom)
		  </td>
		  
		</tr>
		<tr>		  
		  	<td>Url du commerçant</td><td>			                           
			                           	@Html.EditorFor(model => model.Url, "Text")			                           
			                           	@Html.ValidationMessageFor(model => model.Url)
		  </td>
		  
		</tr>
		<tr>		  
		  	<td>Publicités</td><td>			                    
			                    @Html.EditorFor(model => model.Publicites, "Association", new { EntityTypeName = "TheSaucisseFactory.Media", ChoiceMethodName = ""})
		  </td>
		  
		</tr>
		</table>


        <p>
            <input type="submit" value="@Resources.WebResources.Save" />
        </p>
    </fieldset>
}

<div>
    @if (Request.UrlReferrer == null)
    {
		@Html.RouteLink("Retour", "TheSaucisseFactory.Commerce", new {controller = "Commerce", action = "Index"})
	}
	else
	{
		<a href="@Request.UrlReferrer" title="@Resources.WebResources.GoBack">Retour</a>
	}
</div>
