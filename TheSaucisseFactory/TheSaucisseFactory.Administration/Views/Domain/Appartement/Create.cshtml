@model TheSaucisseFactory.Appartement


@{
    ViewBag.Title = "Appartement - Création";
}

<h2>Appartement - Création</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
	$(function() {
		$(".datepicker").datepicker();
	});
</script>

@Html.Partial("_Error")

@using (Html.BeginRouteForm("TheSaucisseFactory.Appartement", new {controller = "Appartement", action = "Create"}, 
		FormMethod.Post, new { autocomplete = "off" })) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Appartement</legend>

		<table width="100%" class="fields">
		<tr>		  
		  	<td>Nom</td><td>			             
			             	@Html.EditorFor(model => model.Nom, "Text")			             
			             	@Html.ValidationMessageFor(model => model.Nom)
		  </td>
		  
		</tr>
		<tr>		  
		  	<td>Id CAMEL</td><td>			                  
			                  	@Html.EditorFor(model => model.CamelId, "Text")			                  
			                  	@Html.ValidationMessageFor(model => model.CamelId)
		  </td>
		  
		</tr>
		<tr>		  
		  	<td>Bâtiment</td><td>			                  
			                  	@Html.EditorFor(model => model.Batiment, "Relation", new { EntityTypeName = "TheSaucisseFactory.Batiment", Nullable = true, ChoiceMethodName = ""})
		  </td>
		  
		</tr>
		<tr>		  
		  	<td>Typologie</td><td>			                   
			                   	@Html.EditorFor(model => model.Type, "Text")			                   
			                   	@Html.ValidationMessageFor(model => model.Type)
		  </td>
		  
		</tr>
		<tr>		  
		  	<td>Surface habitable</td><td>			                           
			                           	@Html.EditorFor(model => model.SurfaceHabitable, "Number")			                           
			                           	@Html.ValidationMessageFor(model => model.SurfaceHabitable)
		  </td>
		  
		</tr>
		<tr>		  
		  	<td>Orientation</td><td>			                     
			                     	@Html.EditorFor(model => model.Orientation, "Text")			                     
			                     	@Html.ValidationMessageFor(model => model.Orientation)
		  </td>
		  
		</tr>
		</table>

		
        <p>
            <input type="submit" value="@Resources.WebResources.Save" />
        </p>
    </fieldset>
}

<div>
    @if (Request.UrlReferrer == null)
    {
		@Html.RouteLink("Retour", "TheSaucisseFactory.Appartement", new {controller = "Appartement", action = "Index"})
	}
	else
	{
		<a href="@Request.UrlReferrer" title="@Resources.WebResources.GoBack">Retour</a>
	}
</div>