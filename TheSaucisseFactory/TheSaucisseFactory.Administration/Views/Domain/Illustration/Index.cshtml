@model PagedList.IPagedList<TheSaucisseFactory.Illustration>
@using PagedList.Mvc;

<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Challenge";
}

<h2>Challenge</h2>

@Html.Partial("_Error")

<table class="entity">
	<tr>

		<td class="indexTopRow">
            <ul>
                <li>@Html.RouteLink(Resources.WebResources.AddNew, "TheSaucisseFactory.Illustration", new {controller = "Illustration", action = "Create"})</li>
            </ul>
        </td>

		<td>
		@using (Html.BeginForm("Index", "Illustration", FormMethod.Get))
		{
			<p>
				@Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { placeholder = Resources.WebResources.SearchByNameWaterMark })
				<input type="submit" value="@Resources.WebResources.Search" />
			</p>
		}

		</td>
	</tr>
    <tr>
        <td colspan="2">
            <table>
				<tr>
					<th></th>

					<th class="indexHeader">Id</th>
					<th class="indexHeader">Nom</th>
					<th class="indexHeader">Contenu</th>
					<th class="indexHeader">Challenge</th>
					
				</tr>

			@foreach (var item in Model) {
				<tr>
					<td nowrap="nowrap">
						@Html.ActionLink(" ", "Edit", "Illustration", new { entityKey = item.EntityKey }, new { @class = "editItemLink" })
						@Html.ActionLink(" ", "Delete", "Illustration", new { entityKey = item.EntityKey }, new {@class = "removeItemLink", onclick = "if (!confirm('" + Resources.WebResources.ConfirmEntityDelete + "')) return false;"})
					</td>
					<td class="indexValue">
						<span style="white-space:nowrap">@Html.DisplayTextFor(modelItem => item.Id)</span>

					</td>
					<td class="indexValue">
												
												
								@Html.DisplayFor(modelItem => item.Nom, "Text")						
								

					</td>
					<td class="indexValue">
												
												
								@Html.DisplayFor(modelItem => item.Contenu, "RichText")						
								

					</td>
					<td class="indexValue">
												
												
								@Html.DisplayFor(modelItem => item.Challenge, "Relation", new { EntityTypeName = "TheSaucisseFactory.Challenge", Nullable = true, ChoiceMethodName = ""} )						
								

					</td>
					
				</tr>
			}

			</table>
        </td>
    </tr>
</table>
@if (Model.PageCount > 1)
{
    <br />
    string.Format(Resources.WebResources.CurrentPage, Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber, @Model.PageCount);
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.CurrentFilter }), PagedListRenderOptions.PageNumbersOnly)
}

