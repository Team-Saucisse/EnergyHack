@model TheSaucisseFactory.GainEnergyCoin


@{
    ViewBag.Title = "Gain d'ECoin - Création";
}

<h2>Gain d'ECoin - Création</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
	$(function() {
		$(".datepicker").datepicker();
	});
</script>

@Html.Partial("_Error")

@using (Html.BeginRouteForm("TheSaucisseFactory.GainEnergyCoin", new {controller = "GainEnergyCoin", action = "Create"}, 
		FormMethod.Post, new { autocomplete = "off" })) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Gain d'ECoin</legend>

		<table width="100%" class="fields">
		<tr>		  
		  	<td>Challenge</td><td>			                   
			                   	@Html.EditorFor(model => model.Challenge, "Relation", new { EntityTypeName = "TheSaucisseFactory.Challenge", Nullable = true, ChoiceMethodName = ""})
		  </td>
		  
		</tr>
		<tr>		  
		  	<td>Appartement</td><td>			                     
			                     	@Html.EditorFor(model => model.Appartement, "Relation", new { EntityTypeName = "TheSaucisseFactory.Appartement", Nullable = true, ChoiceMethodName = ""})
		  </td>
		  
		</tr>
		<tr>		  
		  	<td>Date du gain</td><td>			                      
			                      	@Html.EditorFor(model => model.Date, "DateTime")			                      
			                      	@Html.ValidationMessageFor(model => model.Date)
		  </td>
		  
		</tr>
		<tr>		  
		  	<td>Nombre d'ECoin gagnés</td><td>			                               
			                               	@Html.EditorFor(model => model.Quantite, "Integer")			                               
			                               	@Html.ValidationMessageFor(model => model.Quantite)
		  </td>
		  
		</tr>
		</table>

		
        <p>
            <input type="submit" value="@Resources.WebResources.Save" />
        </p>
    </fieldset>
}

<div>
    @if (Request.UrlReferrer == null)
    {
		@Html.RouteLink("Retour", "TheSaucisseFactory.GainEnergyCoin", new {controller = "GainEnergyCoin", action = "Index"})
	}
	else
	{
		<a href="@Request.UrlReferrer" title="@Resources.WebResources.GoBack">Retour</a>
	}
</div>