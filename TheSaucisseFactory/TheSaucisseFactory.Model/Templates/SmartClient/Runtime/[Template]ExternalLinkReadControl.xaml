<UserControl x:Class="CodeFluent.Runtime.SmartClient.Controls.ExternalLinkReadControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="myUcName">
    <Grid>
        <TextBlock x:Name="txt" Width="Auto">
            <Hyperlink x:Name="lnk" Click="Hyperlink_Click" Foreground="{DynamicResource TreeNodeSelectedColor}">
                <TextBlock x:Name="txtsecond" Text="{Binding ElementName=myUcName, Path=NavigateUri}"/>
            </Hyperlink>
        </TextBlock>
    </Grid>
</UserControl>